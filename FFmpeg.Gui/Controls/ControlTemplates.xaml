<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FFmpeg.Gui.Controls">

    <Style TargetType="local:SliderWithValueText">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SliderWithValueText">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Slider
                            x:Name="PART_Slider"
                            Grid.Row="0"
                            Grid.ColumnSpan="3"
                            IsSnapToTickEnabled="{TemplateBinding IsSnapToTickEnabled}"
                            Maximum="{TemplateBinding Maximum}"
                            Minimum="{TemplateBinding Minimum}"
                            Ticks="{TemplateBinding Ticks}"
                            Value="{TemplateBinding Value}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Foreground="Black"
                            Text="{Binding ElementName=PART_Slider, Path=Value}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="2,0"
                            Foreground="Black"
                            Text="{TemplateBinding ValueUnit}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:VideoScaleInput">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:VideoScaleInput">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="PART_VideoWith"
                            Grid.Column="0"
                            Text="{TemplateBinding VideoWidth,
                                                   Converter={local:TextToIntConverter}}" />
                        <TextBlock
                            Grid.Column="1"
                            Text="x" />
                        <TextBox
                            x:Name="PART_VideoHeight"
                            Grid.Column="2"
                            Text="{TemplateBinding VideoHeight,
                                                   Converter={local:TextToIntConverter}}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>