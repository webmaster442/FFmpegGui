<mvvmCrossViews:MvxWindow
    x:Class="FFmpeg.Gui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvmCrossViews="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:views="clr-namespace:FFmpeg.Gui.Views"
    Title="FFMpeg Gui"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TabControl TabStripPlacement="Bottom">
            <TabItem Header="Source files">
                <views:FileSelectorView DataContext="{Binding FileSelectorVM}" />
            </TabItem>
        </TabControl>
    </Grid>
</mvvmCrossViews:MvxWindow>
