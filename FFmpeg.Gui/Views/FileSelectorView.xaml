<mvvmCrossViews:MvxWpfView
    x:Class="FFmpeg.Gui.Views.FileSelectorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvmCrossViews="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button
                Command="{Binding AddFilesCommand}"
                Content="Add Files..." />
            <Separator />
            <Button
                Command="{Binding RemoveSelectedCommand}"
                CommandParameter="{Binding SelectedFile}"
                Content="Remove selected..." />
            <Separator />
            <Button
                Command="{Binding ClearListCommand}"
                Content="Clear list" />
        </ToolBar>
        <ListBox
            x:Name="Items"
            Grid.Row="1"
            ItemsSource="{Binding Files}"
            SelectedItem="{Binding SelectedFile}" />
    </Grid>
</mvvmCrossViews:MvxWpfView>
